@model IEnumerable<Sitio.Models.Articulo>

@{
    ViewBag.Title = "FormArticulosListar";
}

<h2>Listado Articulos</h2>

@ViewBag.Mensaje @* Esto es para desplegar mensajes de error*@


<p>
    @Html.ActionLink("Nuevo", "FormArticuloNuevo")
    @Html.ActionLink("Volver", "Principal", "Home")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @Html.ActionLink("Modificar", "FormArticuloModificar", new { item.Codigo }) 
            @Html.ActionLink("Consultar", "FormArticuloConsultar", new { item.Codigo }) 
            @Html.ActionLink("Eliminar", "FormArticuloEliminar", new { item.Codigo })
        </td>
    </tr>
}

</table>
